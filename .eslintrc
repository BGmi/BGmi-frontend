{
  "root": true,
  "ignorePatterns": [
    "dist/**"
  ],
  "extends": [
    "next"
  ],
  "overrides": [
    {
      "rules": {
        "@fluffyfox/jsx/no-template-literal": "off"
      },
      "files": [
        "**/*.d.ts",
        "**/*.ts",
        "**/*.tsx"
      ],
      "parserOptions": {
        "project": "./tsconfig.json",
        "sourceType": "module"
      },
      "extends": [
        "kaho/react",
        "kaho/ts"
      ]
    }
  ]
}